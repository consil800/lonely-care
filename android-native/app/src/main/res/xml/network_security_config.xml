<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 개발 환경에서만 로컬 서버 HTTP 허용 -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- Android 에뮬레이터용 IP -->
        <domain includeSubdomains="true">192.168.1.0</domain>
    </domain-config>
    
    <!-- 카카오 도메인은 HTTPS만 허용 -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">kauth.kakao.com</domain>
        <domain includeSubdomains="true">kapi.kakao.com</domain>
        <domain includeSubdomains="true">dapi.kakao.com</domain>
    </domain-config>
    
    <!-- Firebase 도메인은 HTTPS만 허용 -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">firebaseapp.com</domain>
        <domain includeSubdomains="true">googleapis.com</domain>
        <domain includeSubdomains="true">cloudfunctions.net</domain>
        <domain includeSubdomains="true">firestore.googleapis.com</domain>
        <domain includeSubdomains="true">fcm.googleapis.com</domain>
    </domain-config>
    
    <!-- 프로덕션: 기본적으로 HTTPS만 허용 -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>